<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="fr.utbm.entity.Movie" optimistic-lock="version" table="MOVIE">

    <!-- Map to the correct identity column -->
    <id name="id" column="movie_id" type="int">  <!-- Changed from id_movie to movie_id -->
      <generator class="identity"/>
    </id>

    <property name="title" type="string">
      <column length="50" name="TITLE" not-null="true"/>
    </property>
    <property name="copies" type="int">
      <column name="COPIES" not-null="true"/>
    </property>
    <property name="getMovietype" type="string">
      <column length="20" name="MOVIE_TYPE" not-null="true"/>
    </property>
    <property name="director" type="string">
      <column length="50" name="DIRECTOR" not-null="true"/>
    </property>
    <property name="releaseYear" type="int">
      <column name="RELEASE_YEAR" not-null="true"/>
    </property>
    <many-to-one name="mainActor" column="MAIN_ACTOR_ID" lazy="false" fetch="join" class="fr.utbm.entity.Actor" />


  </class>
</hibernate-mapping>